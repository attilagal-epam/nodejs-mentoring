  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:server": "npm run build && npx pm2 start ./dist/module5/network.js --name ngmp-4-network-app",
    "stop:server": "npx pm2 stop ngmp-4-network-app",
    "stop": "exit 0",
    "build": "tsc",
    "test": "jest test/index.test.ts  --reporters=default --reporters=jest-junit",
    "test:all": "jest --reporters=default --reporters=jest-junit",
    "test:coverage": "jest --coverage --coverageReporters=cobertura --coverageDirectory=. --testPathPattern='.*\\.test\\.ts'",
    "test:unit": "jest --testPathPattern='unit.test' --reporters=default --reporters=jest-junit",
    "test:integration": "jest --testPathPattern='integration.test' --reporters=default --reporters=jest-junit",
    "test:e2e": "jest --testPathPattern='.e2e.test' --reporters=default --reporters=jest-junit",
    "coverage": "jest --coverage --reporters=jest-junit --coverageDirectory=.",
    "pretest": "npm run build",
    "posttest": "exit 0",
    "pretest:server": "npm run start:server",
    "posttest:server": "npm run stop:server"
  },
